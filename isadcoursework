 -------------------------procedure-------------------------------
 DELIMITER $$
Create Procedure Sp_insertCustomer
(UserID INT ,
 UserFirstName VARCHAR(30) ,
 UserLastName VARCHAR(30) ,
 UserUserName vARCHAR(30) ,
 UserEmail vARCHAR(30) ,
 UserPassword varchar(30) 
)
BEGIN
INSERT INTO Customer (UserID ,UserFirstName ,UserLastName,UserUserName ,UserEmail, UserPassword ) 
VALUES (UserID ,UserFirstName ,UserLastName,UserUserName ,UserEmail, UserPassword);
END$$


 DELIMITER $$
Create Procedure Sp_insertItem
(ItemID int ,
ProductCost varchar(30),
ProductName varchar(30) ,
Type   varchar(30)
)
BEGIN
INSERT INTO Customer (ItemID,ProductCost,ProductName,Type)
VALUES(ItemID,ProductCost,ProductName,Type);
END$$



 CREATE PROCEDURE `spr_updateitem`(IN ItemID int, IN ProductCost varchar(30),
 IN ProductName varchar(30) ,IN Type varchar(30) ) 
 BEGIN 
 update items
 set ItemID =ItemID ,
 ProductCost= ProductCost,
 ProductName = ProductName, 
 Type = Type
 WHERE ItemID =ItemID;
 END
 
 DELIMITER $$
 CREATE PROCEDURE `spr_updateCustomer`
 (
 UserFirstName VARCHAR(30) ,
 UserLastName VARCHAR(30) ,
 UserUserName vARCHAR(30) ,
 UserEmail vARCHAR(30) ,
 UserPassword varchar(30) 
)
 
 BEGIN 
 (
 update users
 set UserFirstName = UserFirstName ,
 UserLastName = UserLastName ,
 UserUserName = UserUserName  ,
 UserEmail = UserEmail,
 UserPassword = UserPassword
)
 
 WHERE UserID = UserID;
 END $$
	  
 
 
 
 
 
 
 